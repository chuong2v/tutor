<h3>
  <strong><%= @tutor_detail.title %></strong>
</h3>
<p id="notice"><%= notice %></p>
<p>
  <i>Updated at 
    <%= @tutor_detail.updated_at %>
  </i>
</p>

<p>
  <strong>From:</strong>
  <%= link_to User.find(@tutor_detail.user_id).username, user_path(@tutor_detail.user_id) %>
</p>

<p>
  <strong>Subject:</strong>
  <% @subject_ids.each do |s| %>
  <%= Subject.find(s.subject_id).name %>;
  <% end %>
</p>

<p>
  <strong>Level:</strong>
  <% @level_ids.each do |l| %>
  <%= Level.find(l.level_id).name %>;
  <% end %>
</p>

<% if @tutor_detail.gender_id.present?%>
  <p>
    <strong>Gender:</strong>
    <%= Gender.find(@tutor_detail.gender_id).name if @tutor_detail.gender_id.present?%>
  </p>
<%end%>

<% if @tutor_detail.gender_id.present?%>
    <p>
      <strong>Address:</strong>
      <%= @tutor_detail.address %>
    </p>
<% end %>

<% if @tutor_detail.description.present? %>
  <p>
    <strong>Description:</strong>
    <%= @tutor_detail.description %>
  </p>
<% end %>

<%= social_share_button_tag(@tutor_detail.title, url: request.original_url)%>

<% if user_signed_in? && current_user.id == @tutor_detail.user_id %>
    <%= link_to 'Edit', edit_tutor_detail_path(@tutor_detail) %>|
    <%= link_to 'Destroy',tutor_detail_path, method: :delete, data:{confirm: 'Are you sure?'}%>
<% end %>
<br>
<%=link_to 'Back', tutor_details_path %>